{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.33.93.31351",
      "templateHash": "10045834981247890543"
    }
  },
  "parameters": {
    "vmShutdownTimeTimeZoneId": {
      "type": "string",
      "defaultValue": "Pacific Standard Time",
      "metadata": {
        "description": "The time zone for the VMs"
      }
    },
    "vmShutdownTime": {
      "type": "string",
      "defaultValue": "20:00",
      "metadata": {
        "description": "20:00: The time the VM should shutdown."
      }
    }
  },
  "variables": {
    "adminUsername": "attacker",
    "adminPassword": "[format('{0}Mp3f$', uniqueString(subscription().subscriptionId))]",
    "location": "[resourceGroup().location]",
    "BastionName": "Bastion",
    "USMapping": [
      "australiaeast",
      "australiasoutheast",
      "brazilsouth",
      "canadacentral",
      "canadaeast",
      "centralus",
      "eastasia",
      "eastus2",
      "japanwest",
      "koreacentral",
      "westcentralus",
      "westus"
    ],
    "EUMapping": [
      "centralindia",
      "francecentral",
      "germanywestcentral",
      "israelcentral",
      "italynorth",
      "jioindiawest",
      "northeurope",
      "norwayeast",
      "southeastasia",
      "swedencentral",
      "uaenorth",
      "uksouth",
      "ukwest",
      "westeurope"
    ]
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2020-05-01",
      "name": "AttackerVnetNSG",
      "location": "[variables('location')]",
      "properties": {
        "securityRules": []
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2020-03-01",
      "name": "AttackerVnet",
      "location": "[variables('location')]",
      "properties": {
        "subnets": [
          {
            "name": "AttackerSubnet",
            "properties": {
              "addressPrefix": "10.1.0.0/24"
            }
          }
        ],
        "addressSpace": {
          "addressPrefixes": [
            "10.1.0.0/16"
          ]
        }
      }
    },
    {
      "condition": "[contains(variables('USMapping'), variables('location'))]",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2020-03-01",
      "name": "BastionVnetNCUS",
      "location": "northcentralus",
      "properties": {
        "subnets": [
          {
            "name": "BastionSubnet",
            "properties": {
              "addressPrefix": "10.3.0.0/24"
            }
          }
        ],
        "addressSpace": {
          "addressPrefixes": [
            "10.3.0.0/16"
          ]
        }
      }
    }
  ]
}